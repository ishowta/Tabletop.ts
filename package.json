{
  "name": "tabletopts",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "export NODE_ENV=development && export PORT=8571 && ts-node-dev --respawn ./src/router.ts",
    "build": "tsc --outDir ./build && yarn esbuild ./src/client/index.ts --bundle --platform=browser --define:process.env.PORT=8571 --outfile=./static/_dist_/dev.js && cp -r static build/static",
    "prod": "export NODE_ENV=production && export PORT=8571 && node build/router.js",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "@colyseus/schema": "^0.5.41",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.162",
    "colyseus": "=0.12.2",
    "colyseus.js": "=0.12.2",
    "cors": "^2.8.5",
    "esbuild": "^0.7.16",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "phaser": "^3.24.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@colyseus/monitor": "^0.12.2",
    "node-watch": "^0.7.0",
    "ts-node-dev": "^1.0.0-pre.65",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "yarn eslint --max-warnings=0 --fix"
    ]
  }
}
